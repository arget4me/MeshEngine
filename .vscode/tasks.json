{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    
    "tasks": [
        // Windows
        {
            "type": "shell",
            "label": "Build MeshEngine [WINDOWS]",
            "command": "build_windows.bat",
            "presentation": {"echo": true, "reveal": "always", "focus": true, "panel": "shared", "showReuseMessage": false, "clear": true},
            "group": {"kind": "build", "isDefault": true},
        },
        {
            "type": "shell",
            "label": "Test MeshEngine [WINDOWS]",
            "command": "build\\MeshWindows-DEBUG.exe",
            "presentation": {"echo": true, "reveal": "always", "focus": true, "panel": "shared", "showReuseMessage": false, "clear": true},
            "group": {"kind": "test", "isDefault": true},
        },
        {
            "type": "shell",
            "label": "Debug MeshEngine [WINDOWS]",
            "command": "devenv build/MeshWindows-DEBUG.exe",
            "presentation": {"echo": true, "reveal": "always", "focus": true, "panel": "shared", "showReuseMessage": false, "clear": true},
            "group": {"kind": "test", "isDefault": true},
        },


        // RPI
        {
            "type": "shell",
            "label": "Build MeshEngine [RPI]",
            "command": "./build_pi.sh",
            "presentation": {"echo": true, "reveal": "always", "focus": true, "panel": "shared", "showReuseMessage": false, "clear": true},
            "group": {"kind": "build", "isDefault": true},
            "options": {
                "cwd": "${workspaceFolder}/RaspberryPiBcmHost/"
            }
        },
        {
            "type": "shell",
            "label": "Make MeshEngine [RPI]",
            "command": "make",
            "presentation": {"echo": true, "reveal": "always", "focus": true, "panel": "shared", "showReuseMessage": false, "clear": true},
            "group": {"kind": "build", "isDefault": true},
            "options": {
                "cwd": "${workspaceFolder}/RaspberryPiBcmHost/"
            }
        },
        {
            "type": "shell",
            "label": "Test MeshEngine [RPI]",
            "command": "./build/MeshPi_DEBUG",
            "presentation": {"echo": true, "reveal": "always", "focus": true, "panel": "shared", "showReuseMessage": false, "clear": true},
            "group": {"kind": "test", "isDefault": true},
        },
        {
            "type": "shell",
            "label": "Debug MeshEngine [RPI]",
            "command": "gdb build/MeshPi-DEBUG",
            "presentation": {"echo": true, "reveal": "always", "focus": true, "panel": "shared", "showReuseMessage": false, "clear": true},
            "group": {"kind": "test", "isDefault": true},
        },



        // RPI
        {
            "type": "shell",
            "label": "Make MeshEngine [RPI GLX]",
            "command": "make",
            "presentation": {"echo": true, "reveal": "always", "focus": true, "panel": "shared", "showReuseMessage": false, "clear": true},
            "group": {"kind": "build", "isDefault": true},
            "options": {
                "cwd": "${workspaceFolder}/RaspberryPiGLX/"
            }
        },
    ]
}
